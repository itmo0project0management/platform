<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lp_resume_form" model="ir.ui.view">
            <field name="name">Resume Details</field>
            <field name="model">lp.resume</field>
            <field name="arch" type="xml">
                <form string="Resume">
                    <sheet>
                        <group string="Информация об студенте">
                            <field name="author"/>
                            <field name="group"/>
                        </group>
                        <group string="Навыки и опыт студента">
                            <field name="short_description"/>
                            <field name="skills" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="С++..."/>
                            <field name="areas_of_interest" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Медицина..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="lp_resume_tree" model="ir.ui.view">
            <field name="name">Resume</field>
            <field name="model">lp.resume</field>
            <field name="arch" type="xml">
                <tree string="Project Details Tree" >
                    <field name="author"/>
                    <field name="skills" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="С++..."/>
                    <field name="areas_of_interest" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Медицина..."/>
                </tree>
            </field>
        </record>

        <record id="action_nocontent_lp_resume" model="ir.actions.act_window">
            <field name="name">Resume</field>
            <field name="res_model">lp.resume</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    You haven't created any resume yet.
                </p>
            </field>
        </record>
    </data>
</odoo>